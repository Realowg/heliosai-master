{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸ§© Launch Heliod Extension Host",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/heliod-submodule/extensions/vscode"
      ],
      "outFiles": [
        "${workspaceFolder}/heliod-submodule/extensions/vscode/out/**/*.js"
      ],
      "preLaunchTask": "ðŸš€ Start All Dev Servers",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸ“± Attach to Heliod App",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/heliod-app/out/**/*.js"
      ],
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸš€ Attach to Heliod-Roo-Code",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/Heliod-Roo-Code/dist/**/*.js"
      ],
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸ§© Run Submodule GUI Dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/heliod-submodule/gui",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸ§© Run Submodule Extension Watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run esbuild-watch",
      "cwd": "${workspaceFolder}/heliod-submodule/extensions/vscode",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸ“± Run Heliod App Watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run watch",
      "cwd": "${workspaceFolder}/heliod-app",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸš€ Run Roo Code Watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run watch",
      "cwd": "${workspaceFolder}/Heliod-Roo-Code",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸš€ Run Roo Code Dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/Heliod-Roo-Code",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    },
    {
      "name": "ðŸ§© Run Submodule TSC Watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run tsc-watch",
      "cwd": "${workspaceFolder}/heliod-submodule/extensions/vscode",
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "polite"
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Start All Dev Processes",
      "configurations": [
        "ðŸ§© Run Submodule GUI Dev",
        "ðŸ§© Run Submodule Extension Watch",
        "ðŸ§© Run Submodule TSC Watch",
        "ðŸ“± Run Heliod App Watch",
        "ðŸš€ Run Roo Code Watch",
        "ðŸš€ Run Roo Code Dev"
      ],
      "presentation": {
        "group": "",
        "order": 2
      },
      "stopAll": true
    }
  ]
}